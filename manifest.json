{
  "manifest_version": 3,
  "name": "LinkedIn Job Cleaner",
  "version": "1.0",
  "description": "Remove vagas 'Promovido' e 'Promoted' dos resultados de busca do LinkedIn.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*", "https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}